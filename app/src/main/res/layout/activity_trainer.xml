<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jizhou_xie.gvt.TrainerActivity">

    <TextView
        android:text="die"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:id="@+id/text_gender"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="28sp"/>

    <TextView
        android:text="Veranstagungen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_gender"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_de"
        android:textSize="30sp" />

    <TextView
        android:text="-er"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="55dp"
        android:id="@+id/text_pl"
        android:layout_alignBaseline="@+id/text_de"
        android:layout_alignBottom="@+id/text_de"
        android:layout_alignParentEnd="true"
        android:textSize="28sp" />

    <TextView
        android:text="管理"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_de"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:id="@+id/text_zh"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="Left"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="80dp"
        android:id="@+id/button_left"
        android:textSize="30sp" />

    <Button
        android:text="Middle"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/button_middle"
        android:layout_alignBottom="@+id/button_left"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <Button
        android:text="Right"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:id="@+id/button_right"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="80dp"
        android:layout_alignBottom="@+id/button_middle"
        android:textSize="30sp" />

</RelativeLayout>
